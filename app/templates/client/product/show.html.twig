{% extends "client/layouts/app.html.twig" %}

{% block title %}
    {{ product.name }}
{% endblock %}

{% block body %}

    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>


    {% include "client/layouts/navbar.html.twig" %}

    <!-- Shop Details Section Begin -->
    <section class="shop-details">
        <div class="product__details__pic">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="product__details__breadcrumb">
                            {% for category in product.category %}
                                <a href="./index.html">{{ category.name }}</a>
                            {% endfor %}
                            <span>{{ product.name }}</span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-3 col-md-3">
                        <ul class="nav nav-tabs" role="tablist">
                            <li class="nav-item">
                                <a
                                        class="nav-link active"
                                        data-toggle="tab"
                                        href="#tabs-1"
                                        role="tab"
                                >
                                    <div
                                            class="product__thumb__pic set-bg"
                                            data-setbg="{{ asset('images/'~ product.getImagePath ~'') }}"
                                    ></div>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a
                                        class="nav-link"
                                        data-toggle="tab"
                                        href="#tabs-2"
                                        role="tab"
                                >
                                    <div
                                            class="product__thumb__pic set-bg"
                                            data-setbg="{{ asset('images/'~ product.getImagePath2 ~'') }}"
                                    ></div>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a
                                        class="nav-link"
                                        data-toggle="tab"
                                        href="#tabs-3"
                                        role="tab"
                                >
                                    <div
                                            class="product__thumb__pic set-bg"
                                            data-setbg="{{ asset('images/'~ product.getImagePath3 ~'') }}"
                                    ></div>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-6 col-md-9">
                        <div class="tab-content">
                            <div class="tab-pane active" id="tabs-1" role="tabpanel">
                                <div class="product__details__pic__item">
                                    <img src="{{ asset('images/'~ product.getImagePath ~'') }}" alt=""/>
                                </div>
                            </div>
                            <div class="tab-pane" id="tabs-2" role="tabpanel">
                                <div class="product__details__pic__item">
                                    <img src="{{ asset('images/'~ product.getImagePath2 ~'') }}" alt=""/>
                                </div>
                            </div>
                            <div class="tab-pane" id="tabs-3" role="tabpanel">
                                <div class="product__details__pic__item">
                                    <img src="{{ asset('images/'~ product.getImagePath3 ~'') }}" alt=""/>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="product__details__content">
            <div class="container">
                <div class="row d-flex justify-content-center">
                    <div class="col-lg-8">
                        <div class="product__details__text">
                            <h4>{{ product.name }}</h4>

                            <h3>${{ product.price }} </h3>
                            <div class="product__details__cart__option">
                                {% if app.user != null %}
                                {{ form_start(form) }}
                                <div class="quantity">
                                    {{ form_widget(form.quantity, {
                                        'attr': {
                                            'class': 'pro-qty text-center' ~ (form.quantity.vars.valid ? '' : 'is-invalid')
                                        }
                                    }) }}
                                </div>
                                {{ form_widget(form.add, {'attr': {'class': 'btn primary-btn'}}) }}

                            </div>
                            <div class="invalid-feedback">
                                {{ form_errors(form.quantity) }}
                            </div>
                            {{ form_end(form) }}
                            {% else %}
                            <a class="btn primary-btn disabled">Please Sign in</a>
                        </div>
                        {% endif %}

                        <div class="product__details__last__option">
                            <h5><span>Guaranteed Safe Checkout</span></h5>
                            <img src="img/shop-details/details-payment.png" alt=""/>
                            <ul>

                                <li>
                                    <span>Categories:</span>
                                    {% for category in product.category %}
                                        <a href="">{{ category }} </a>
                                    {% endfor %}
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="product__details__tab">
                        <ul class="nav nav-tabs" role="tablist">
                            <li class="nav-item">
                                <a
                                        class="nav-link active"
                                        data-toggle="tab"
                                        href="#tabs-5"
                                        role="tab"
                                >Description</a
                                >
                            </li>

                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tabs-5" role="tabpanel">
                                <div class="product__details__tab__content">
                                    {{ product.description|raw }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </section>
    <!-- Shop Details Section End -->



    {% include "client/layouts/footer.html.twig" %}

    <!-- Search Begin -->
    <div class="search-model">
        <div class="h-100 d-flex align-items-center justify-content-center">
            <div class="search-close-switch">+</div>
            <form class="search-model-form">
                <input type="text" id="search-input" placeholder="Search here....."/>
            </form>
        </div>
    </div>
    <!-- Search End -->


{% endblock %}
  
