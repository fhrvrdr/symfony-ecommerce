{% extends "client/layouts/app.html.twig" %}

{% block title %}
    Shopping Cart
{% endblock %}

{% block body %}
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    {% include "client/layouts/navbar.html.twig" %}

    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__text">
                        <h4>Shopping Cart</h4>
                        <div class="breadcrumb__links">
                            <a href="./index.html">Home</a>
                            <a href="./shop.html">Shop</a>
                            <span>Shopping Cart</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Shopping Cart Section Begin -->
    <section class="shopping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="shopping__cart__table">
                        <table>
                            <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for cartItem in cartItems %}
                                <tr>
                                    <td class="product__cart__item">
                                        <div class="product__cart__item__pic">
                                            <img src="img/shopping-cart/cart-1.jpg" alt="">
                                        </div>
                                        <div class="product__cart__item__text">
                                            <h6>{{ cartItem.getProduct.name }}</h6>
                                            <h5>${{ cartItem.getProduct.price }}</h5>
                                        </div>
                                    </td>
                                    <td class="quantity__item">
                                        <div class="quantity">
                                            <div class="pro-qty-3">
                                                <a href="{{ url('drop_cart_item',{ id : cartItem.id }) }}"><span
                                                            class="fa fa-angle-left dec qtybtn"></span></a>
                                                <input type="text" value="{{ cartItem.getQuantity }}">
                                                <a href="{{ url('increase_cart_item',{ id : cartItem.id }) }}"><span
                                                            class="fa fa-angle-right dec qtybtn"></span></a>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="cart__price">
                                        $ {{ cartItem.getProduct.price * cartItem.getQuantity }}</td>
                                    <td class="cart__close"><a
                                                href="{{ url('delete_cart_item',{ id : cartItem.id }) }}"><i
                                                    class="fa fa-close"></a></td>


                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="continue__btn">
                                <a href="{{ url('product_list') }}">Continue Shopping</a>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="cart__discount">
                        <h6>Discount codes</h6>
                        <form action="#">
                            <input type="text" placeholder="Coupon code">
                            <button type="submit">Apply</button>
                        </form>
                    </div>
                    <div class="cart__total">
                        <h6>Cart total</h6>
                        <ul>
                            <li>Subtotal <span>${{ total }}</span></li>
                            <li>Discount <span>- ${{ discount }}</span></li>
                            <li>Total <span>${{ total - discount }}</span></li>
                        </ul>
                        <a href="{{ url('show_order') }}" class="primary-btn">Proceed to checkout</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Shopping Cart Section End -->


    {% include "client/layouts/footer.html.twig" %}

    <script>
        const myForm = document.getElementById("quantityForm");
        document.getElementById("quantitySubmit").addEventListener("click", function () {

            myForm.submit();

        });
    </script>

{% endblock %}
